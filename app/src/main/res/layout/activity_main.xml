<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FatsandOils"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">

        </com.google.android.gms.ads.AdView>


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:scaleType="centerCrop"
            android:src="@drawable/for_acivity_one"
            />

        <TextView
            android:id="@+id/FruitsandBerries"
            android:layout_width="450dp"
            android:layout_height="62dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/image"
            android:layout_marginBottom="10dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:padding="8dp"
            android:text="Fruits and Berries"
            android:textColor="#fff"
            android:textSize="40px"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/NutsSeedsandPeanuts"
            android:layout_width="450dp"
            android:layout_height="62dp"
            android:layout_below="@id/FruitsandBerries"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:textColor="#fff"
            android:padding="15dp"
            android:text="Nuts, Seeds and Peanuts"
            android:textSize="40px"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Meats"
            android:layout_width="450dp"
            android:layout_height="62dp"
            android:textColor="#fff"
            android:layout_below="@id/NutsSeedsandPeanuts"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:text="Meats"
            android:textSize="40px"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/FishandSeafood"
            android:layout_width="450dp"
            android:layout_height="62dp"
            android:textColor="#fff"
            android:layout_below="@id/Meats"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:textSize="40px"
            android:text="Fish and Seafood"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Eggs"
            android:layout_width="450dp"
            android:textColor="#fff"
            android:layout_height="62dp"
            android:layout_below="@id/FishandSeafood"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:textSize="40px"
            android:text="Eggs"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Vegetables"
            android:layout_width="450dp"
            android:textColor="#fff"
            android:layout_height="62dp"
            android:layout_below="@id/Eggs"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:textSize="40px"
            android:text="Vegetables"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Grains"
            android:layout_width="450dp"
            android:layout_height="62dp"
            android:layout_below="@id/Vegetables"
            android:layout_marginBottom="8dp"
            android:textColor="#fff"
            android:background="@drawable/very"
            android:gravity="center"
            android:textSize="40px"
            android:text="Grains"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/FatsandOils"
            android:layout_width="450dp"
            android:layout_height="62dp"
            android:layout_below="@id/Grains"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:textColor="#fff"

            android:gravity="center"
            android:textSize="40px"
            android:text="Fats and Oils"
            android:textStyle="italic" />


    </RelativeLayout>


</ScrollView>