<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/for_text"
            android:scaleType="centerCrop"
            android:src="@drawable/seafood"
            />
        <TextView
            android:id="@+id/sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="10dp"
            android:background="@drawable/very"
            android:text="Tuna is very popular in Western countries, and tends to be low in fat and calories, but high in protein. It is perfect people who need to add more protein to their diets, while keeping calories low."
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/Salmon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sample"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#fff"
            android:text="Salmon"
            android:textSize="40px"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Sardines"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Salmon"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:text="Sardines"
            android:textSize="40px" />


        <TextView
            android:id="@+id/Shellfish"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sardines"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:text="Shellfish"
            android:textSize="40px" />
        <TextView
            android:id="@+id/Tuna"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Shellfish"
            android:layout_marginBottom="8dp"
            android:background="@drawable/very"
            android:gravity="center"
            android:text="Tuna"
            android:textSize="40px" />



    </RelativeLayout>

</ScrollView>

