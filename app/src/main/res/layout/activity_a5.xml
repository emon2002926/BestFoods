<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:src="@drawable/apples"/>
        <TextView
            android:id="@+id/A1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/for_text"
            android:textColor="#fff"
            android:layout_below="@+id/d"
            android:textSize="20dp"
            android:text="Apples are among the most popular fruits,
and also happen to be incredibly nutritious.
They contain a high amount of fiber, vitamin
C, potassium and vitamin K. They also provide
 some B vitamins ."
            android:padding="10dp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/A2"
            android:layout_below="@+id/A1"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/for_text"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="Studies suggest that the antioxidants in apples
    can promote heart health and reduce the risk of
    type 2 diabetes, cancer and Alzheimerâ€™s .
    The antioxidant activity in apples has also been l
    inked with increased bone density in animal and
    test-tube studies"
            android:padding="10dp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/A3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/A2"
            android:background="@drawable/for_text"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text=" Another notable health benefit of apples istheir pectin content.Pectin is a prebiotic fiber that feeds the good bacteria
    in your gut and helps improve digestion and metabolic health ."
            android:padding="10dp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/A4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/A3"
            android:layout_marginTop="10dp"
            android:background="@drawable/for_text"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text=" Bottom Line: Apples are very nutritious. Their
    nutrients, antioxidants and fiber may reduce the risk
    of disease and improve digestion"
            android:padding="10dp"
            android:textStyle="italic" />




    </RelativeLayout>

</ScrollView>
